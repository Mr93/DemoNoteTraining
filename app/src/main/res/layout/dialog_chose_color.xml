<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/padding_note_item">

    <TextView
        android:id="@+id/txt_title_chose_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_chose_color"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_recycler_view"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_line"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="@dimen/margin_recycler_view"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

    <GridView
        android:id="@+id/grid_view_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:gravity="center"/>
    </LinearLayout>


</LinearLayout>