<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_content"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/height_icon_delete_image"/>

    <ImageView
        android:id="@+id/icon_delete_image"
        android:layout_width="@dimen/height_icon_delete_image"
        android:layout_height="@dimen/height_icon_delete_image"
        app:srcCompat="@mipmap/ic_delete_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:cropToPadding="true"/>

</RelativeLayout>